    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // C√°c ph·∫ßn kh√°c gi·ªØ nguy√™n
            
            // C·∫≠p nh·∫≠t link ƒë·ªïi qu√†
            const rewardLink = document.getElementById('rewardLink');
            const REWARD_LINK = "https://social.zalopay.vn/spa/v2/loyalty/reward";
            rewardLink.textContent = REWARD_LINK;
            
            // S·ª≠a s·ª± ki·ªán click cho n√∫t m·ªü link
            openLinkBtn.addEventListener('click', function() {
                const link = rewardLink.textContent.trim();
                if (link && link.startsWith('http')) {
                    window.open(link, '_blank', 'noopener,noreferrer');
                } else {
                    alert('Link kh√¥ng h·ª£p l·ªá! Vui l√≤ng ki·ªÉm tra l·∫°i.');
                }
            });
            
            generateBtn.addEventListener('click', function() {
                const mode = voucherMode.value;
                const targetHour = document.getElementById('targetHour').value;
                const targetMin = document.getElementById('targetMin').value;
                const targetSec = document.getElementById('targetSec').value;
                const syncOffset = document.getElementById('syncOffset').value;
                const spamDuration = document.getElementById('spamDuration').value;
                
                let codeTemplate;
                
                if (mode === 'single') {
                    const rewardStoreId = document.getElementById('rewardStoreId').value;
                    const redeemMethod = document.getElementById('redeemMethod').value;
                    const area = document.getElementById('area').value;
                    
                    codeTemplate = `(async () => {
  const body = {
    rewardStoreId: ${rewardStoreId}, // üéÅ ID voucher b·∫°n mu·ªën ƒë·ªïi
    redeemMethod: "${redeemMethod}",
    requester: "loyalty_store",
    area: "${area}"
  };

  const headers = {
    "Content-Type": "application/json",
    "x-platform": "ZPI",
    "x-device-os": "IOS",
    "x-app-version": "ZaloPayApp",
    "Accept": "application/json, text/plain, */*"
  };

  const delay = (ms) => new Promise(resolve => setTimeout(resolve, ms));
  const randomDelay = () => Math.floor(Math.random() * 30) + 50; // 50‚Äì80ms

  // ‚è∞ Gi·ªù sƒÉn ch√≠nh x√°c
  const TARGET_HOUR = ${targetHour};
  const TARGET_MIN = ${targetMin};
  const TARGET_SEC = ${targetSec};
  const TARGET_MS = 0;

  // üï∞Ô∏è ƒêi·ªÅu ch·ªânh ƒë·ªìng b·ªô th·ªùi gian
  const syncOffset = ${syncOffset}; // ƒê·ªô tr·ªÖ c·∫ßn b√π (ms)

  const fireTime = new Date();
  fireTime.setHours(TARGET_HOUR, TARGET_MIN, TARGET_SEC, TARGET_MS - syncOffset);
  const spamEndTime = new Date(fireTime.getTime() + ${spamDuration}); // spam ${spamDuration}ms

  const now = new Date();
  if (now < fireTime) {
    console.log(\`‚è≥ Ch·ªù ƒë·∫øn \${fireTime.toLocaleTimeString('vi-VN', { hour12: false })}...\`);
    await delay(fireTime - now);
  }

  let attempt = 0;
  let success = false;

  console.log("üöÄ B·∫Øt ƒë·∫ßu spam request...");

  while (new Date() < spamEndTime && !success) {
    attempt++;
    try {
      const res = await fetch("https://loyalty.zalopay.vn/gateway/v1/redeempoint", {
        method: "POST",
        headers,
        body: JSON.stringify(body),
        credentials: "include"
      });

      const data = await res.json();
      console.log(\`üîÅ L·∫ßn \${attempt}:\`, data);

      if (data.returnCode === 1) {
        alert("üéâ ƒê·ªîI QU√Ä TH√ÄNH C√îNG!");
        success = true;
        break;
      }
    } catch (err) {
      console.error("üö´ L·ªói request:", err);
    }

    await delay(randomDelay());
  }

  if (!success) {
    alert("‚ùå Kh√¥ng ƒë·ªïi ƒë∆∞·ª£c qu√† sau khi th·ª≠ li√™n t·ª•c.");
  }
})();`;
                } else {
                    const rewardStoreIds = document.getElementById('rewardStoreIds').value
                        .split(',')
                        .map(id => id.trim())
                        .filter(id => id !== '')
                        .map(id => parseInt(id))
                        .filter(id => !isNaN(id));
                    const redeemMethod = document.getElementById('multiRedeemMethod').value;
                    const area = document.getElementById('multiArea').value;
                    
                    if (rewardStoreIds.length === 0) {
                        alert("Vui l√≤ng nh·∫≠p √≠t nh·∫•t m·ªôt ID voucher h·ª£p l·ªá!");
                        return;
                    }
                    
                    codeTemplate = `(async () => {
  const rewardIds = [${rewardStoreIds.join(', ')}]; // üéÅ C√°c ID voucher b·∫°n mu·ªën ƒë·ªïi

  const headers = {
    "Content-Type": "application/json",
    "x-platform": "ZPI",
    "x-device-os": "IOS",
    "x-app-version": "ZaloPayApp",
    "Accept": "application/json, text/plain, */*"
  };

  const delay = (ms) => new Promise(resolve => setTimeout(resolve, ms));
  const randomDelay = () => Math.floor(Math.random() * 30) + 50;

  const TARGET_HOUR = ${targetHour}, TARGET_MIN = ${targetMin}, TARGET_SEC = ${targetSec}, TARGET_MS = 0;
  const syncOffset = ${syncOffset}; // B·∫°n c√≥ th·ªÉ ch·ªânh n·∫øu ƒë·ªìng h·ªì l·ªách

  const fireTime = new Date();
  fireTime.setHours(TARGET_HOUR, TARGET_MIN, TARGET_SEC, TARGET_MS - syncOffset);
  const spamEndTime = new Date(fireTime.getTime() + ${spamDuration});

  const now = new Date();
  if (now < fireTime) {
    console.log(\`‚è≥ Ch·ªù ƒë·∫øn \${fireTime.toLocaleTimeString('vi-VN', { hour12: false })}...\`);
    await delay(fireTime - now);
  }

  console.log("üöÄ B·∫Øt ƒë·∫ßu spam ƒë·ªïi ${rewardStoreIds.length} voucher...");

  let success = false;

  while (new Date() < spamEndTime && !success) {
    await Promise.all(
      rewardIds.map(async (id) => {
        const body = {
          rewardStoreId: id,
          redeemMethod: "${redeemMethod}",
          requester: "Promotion_Hub_Zone_3",
          area: "${area}"
        };

        try {
          const res = await fetch("https://loyalty.zalopay.vn/gateway/v1/redeempoint", {
            method: "POST",
            headers,
            body: JSON.stringify(body),
            credentials: "include"
          });

          const data = await res.json();
          console.log(\`üéØ Voucher \${id}:\`, data);

          if (data.returnCode === 1) {
            alert(\`üéâ ƒê·ªîI QU√Ä TH√ÄNH C√îNG: Voucher \${id}\`);
            success = true;
          }
        } catch (err) {
          console.error(\`üö´ L·ªói khi ƒë·ªïi voucher \${id}:\`, err);
        }
      })
    );

    await delay(randomDelay());
  }

  if (!success) {
    alert("‚ùå Kh√¥ng ƒë·ªïi ƒë∆∞·ª£c qu√† sau nhi·ªÅu l·∫ßn th·ª≠.");
  }
})();`;
                }
                
                const codeElement = document.getElementById('generatedCode');
                codeElement.textContent = codeTemplate;
                
                // Auto copy to clipboard
                copyToClipboard(codeTemplate);
            });

            manualCopyBtn.addEventListener('click', function() {
                const code = document.getElementById('generatedCode').textContent;
                copyToClipboard(code);
            });

            copyLinkBtn.addEventListener('click', function() {
                const link = rewardLink.textContent;
                copyToClipboard(link);
            });

            openLinkBtn.addEventListener('click', function() {
                let link = rewardLink.textContent.trim();
                console.log('Attempting to open link:', link);

                // Ensure link starts with http or https
                if (!link.startsWith('http://') && !link.startsWith('https://')) {
                    link = 'https://' + link;
                    console.warn('Link missing protocol, defaulting to https:', link);
                }

                try {
                    // Primary method: window.open
                    const newWindow = window.open(link, '_blank');
                    if (!newWindow || newWindow.closed || typeof newWindow.closed === 'undefined') {
                        throw new Error('Window.open failed, possibly blocked by popup blocker');
                    }
                    console.log('Link opened successfully using window.open');
                } catch (error) {
                    console.error('Error opening link with window.open:', error.message);
                    // Fallback: create an <a> element and simulate click
                    const a = document.createElement('a');
                    a.href = link;
                    a.target = '_blank';
                    a.rel = 'noopener noreferrer';
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                    console.log('Link opened using fallback <a> element');
                }
            });

            function copyToClipboard(text) {
                navigator.clipboard.writeText(text).then(() => {
                    copyMessage.style.display = 'block';
                    setTimeout(() => {
                        copyMessage.style.display = 'none';
                    }, 2000);
                }).catch(err => {
                    console.error('L·ªói khi copy:', err);
                    // Fallback cho tr√¨nh duy·ªát c≈©
                    const textarea = document.createElement('textarea');
                    textarea.value = text;
                    document.body.appendChild(textarea);
                    textarea.select();
                    try {
                        document.execCommand('copy');
                        copyMessage.style.display = 'block';
                        setTimeout(() => {
                            copyMessage.style.display = 'none';
                        }, 2000);
                    } catch (err) {
                        alert('Kh√¥ng th·ªÉ copy t·ª± ƒë·ªông, vui l√≤ng copy th·ªß c√¥ng');
                    }
                    document.body.removeChild(textarea);
                });
            }
        });
    </script>
</body>
</html>
